{
  "name": "node",
  "version": "0.0.1",
  "description": "gRPC node.js server boilerplate",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --build tsconfig.json",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' 'src/index.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint '{src,test}/**/*.ts'",
    "format": "eslint '{src,test}/**/*.ts' --fix",
    "idl:init": "git submodule update --init",
    "idl:update": "git submodule update --remote --merge",
    "pregenerate:idl": "docker build . -f Dockerfile.buf -t ohmygrpc/buf:local",
    "generate:idl": "docker run --volume `pwd`:/go/src/github.com/ohmygrpc/node --workdir /go/src/github.com/ohmygrpc/node ohmygrpc/buf:local generate idl"
  },
  "keywords": [],
  "author": "Taeho Kim <taeho@taeho.io>",
  "_moduleAliases": {
    "@idl": "dist/__proto__/services"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.2.8",
    "@grpc/proto-loader": "^0.5.6",
    "mali": "^0.44.4",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
