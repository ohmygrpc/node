{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [
          ".ts"
        ],
        "root": [
          "."
        ],
        "alias": {
          "@ohmygrpc/idl": "./src/idl",
          "~types": "./src/types"
        }
      }
    ]
  ],
  "ignore": ["**/*.spec.ts"]
}
